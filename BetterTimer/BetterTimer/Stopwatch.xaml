<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetterTimer.Stopwatch">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="ClockDisplay" FontSize="60" HorizontalTextAlignment="Center" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Start" WidthRequest="150" Clicked="OnStart"></Button>
                <Button Text="Pause" WidthRequest="150" Clicked="OnPause"></Button>
                <Button Text="Reset" WidthRequest="150" Clicked="OnReset"></Button>
            </StackLayout>
            <StackLayout>
                <Label x:Name="Message" FontSize="20" Text="Some Text" WidthRequest="100"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>