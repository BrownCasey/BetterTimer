<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetterTimer.Timer">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="CountdownDisplay" FontSize="60" HorizontalTextAlignment="Center"/>
            <TimePicker x:Name="TimePicked" Time="00:01:06" FontSize="90" HorizontalOptions="Center" Format="HH:mm"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Start" Clicked="OnStart"/>
                <Button Text="Stop" Clicked="OnStop"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>