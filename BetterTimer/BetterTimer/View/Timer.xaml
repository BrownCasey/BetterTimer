<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BetterTimer.Timer">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="CountdownDisplay" FontSize="60" HorizontalTextAlignment="Center"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="HH"/>
                <Slider Maximum="24" ThumbColor="Red" MaximumTrackColor="Gray" MinimumTrackColor="Gray" ValueChanged="OnHourChanged" WidthRequest="300"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="MM"/>
                <Slider Maximum="60" ThumbColor="Red" MaximumTrackColor="Gray" MinimumTrackColor="Gray" ValueChanged="OnMinuteChanged" WidthRequest="300"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="SS"/>
                <Slider Maximum="60" ThumbColor="Red" MaximumTrackColor="Gray" MinimumTrackColor="Gray" ValueChanged="OnSecondChanged" WidthRequest="300"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Start" Clicked="OnStart"/>
                <Button Text="Pause" Clicked="OnPause"/>
                <Button Text="Stop" Clicked="OnStop"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>